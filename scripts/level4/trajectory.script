local M = {}

-- private
local message = "Hello world!"

function M.getTrajectoryPoint(startX, startY, velocityX, velocityY, time)
	-- Projectile position at a given time after launch
	x = startX + velocityX * time
	y = startY + velocityY * time - 1/2 * G * time * time
end

function M.drawPixels(x, y)
	drawpixels.fill(self.buffer_info, 0, 0, 0, 0)
	if x and y then
		g = 10
		num = vmath.length(vmath.vector3(x, y, 0))/g
		dir = math.atan2(y, x)
		for i = 0, num do
			drawpixels.filled_circle(self.buffer_info, math.cos(dir)*i*g, math.sin(dir)*i*g, 5, 255, 255, 0, 255, true)
		end
	end
	resource.set_texture(go.get("/go#sprite", "texture0"), self.header, self.buffer_info.buffer)
end

return M